<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="TrackmaTitlesView" parent="GtkBox">
    <property name="orientation">vertical</property>

    <child>
      <object class="AdwLeaflet" id="leaflet">
        <property name="can-navigate-back">True</property>

        <child>
          <object class="AdwLeafletPage">
            <property name="child">
              <object class="TrackmaTitlesList" id="titles_list" />
            </property>
          </object>
        </child>

        <child>
          <object class="AdwLeafletPage">
            <property name="navigatable">False</property>
            <property name="child">
              <object class="GtkSeparator"/>
            </property>
          </object>
        </child>

        <child>
          <object class="AdwLeafletPage">
            <property name="child">
              <object class="TrackmaTitleDetails" id="title_details" />
            </property>
          </object>
        </child>
      </object>
    </child>

  </template>
</interface>
