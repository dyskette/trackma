<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="TrackmaNewAccountView" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="AdwHeaderBar" id="header_bar">
        <child type="start">
          <object class="GtkButton" id="back_button">
            <property name="icon-name">go-previous-symbolic</property>
            <property name="action-name">win.home</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="AdwPreferencesPage">

        <child>
          <object class="AdwPreferencesGroup">
            <child>
              <object class="GtkLabel" id="accounts_label">
                <property name="wrap">True</property>
                <property name="justify">center</property>
                <property name="label" translatable="yes">Connect to your data in the cloud</property>
                <style>
                  <class name="title-1" />
                </style>
              </object>
            </child>

            <child>
              <object class="GtkLabel" id="offline_label">
                <property name="margin-top">24</property>
                <property name="wrap">True</property>
                <property name="label" translatable="yes">No internet connection â€” connect to set up new online accounts</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup" id="accounts_frame">
            <property name="visible">False</property>
            <child>
              <object class="GtkListBox" id="accounts_listbox">
                <property name="hexpand">True</property>
                <property name="selection_mode">none</property>
                <signal name="row-activated" handler="on_accounts_listbox_row_activated" swapped="yes" />
                <style>
                  <class name="boxed-list" />
                </style>
                <accessibility>
                  <relation name="labelled-by">accounts_label</relation>
                </accessibility>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="AdwPreferencesGroup">
            <property name="title" translatable="yes">Add an account</property>
            <child>
              <object class="GtkListBox" id="providers_listbox">
                <property name="selection_mode">none</property>
                <signal name="row-activated" handler="on_provider_row_activated_cb" swapped="yes" />
                <style>
                  <class name="boxed-list" />
                </style>
              </object>
            </child>
          </object>
        </child>

      </object>
    </child>

  </template>
</interface>
